<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        <%= recipe.name %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="<%= recipe.image %>" class="img-fluid rounded" alt="<%= recipe.name %>" />
            </div>
            <div class="col-md-6">
                <h1>
                    <%= recipe.name %>
                </h1>
                <p class="text-muted">
                    <%= recipe.description %>
                </p>

                <div class="d-flex gap-3 mb-3">
                    <span class="badge bg-secondary">Prep: <%= recipe.prepTime %> mins</span>
                    <span class="badge bg-secondary">Cook: <%= recipe.cookTime %> mins</span>
                </div>

                <h3>Ingredients</h3>
                <ul class="list-group">
                    <% recipe.ingredients.forEach(ingredient=> { %>
                        <li class="list-group-item">
                            <%= ingredient %>
                        </li>
                        <% }); %>
                </ul>

                <hr />
                <h3>Instructions</h3>
                <ol class="list-group list-group-numbered">
                    <% recipe.instructions.forEach(instruction=> { %>
                        <li class="list-group-item">
                            <%= instruction %>
                        </li>
                        <% }); %>
                </ol>


                <a class="btn btn-outlined-dark mt-3" href="/">Back</a>
            </div>
        </div>
    </div>
</body>

</html>